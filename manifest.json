{
  "manifest_version": 2,
  "name": "Kardashian Krypt",
  "version": "1.0",
  "icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" },
  "description": "HIDE MESSAGES IN PICTURES OF KIM KARDASHIAN",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "activeTab"
  ],
  "background": {
    "scripts": ["kardashiankrypt.js", "generatepng.js", "webtoolkit.base64.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {                    // optional
            "19": "16.png",  
            "38": "48.png" 
    }
  }
}