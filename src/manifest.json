{
  "manifest_version": 2,
  "name": "Kardashian Krypt",
  "version": "0.999",
  "icons": { "16": "16.png",
           "48": "48.png",
          "128": "128.png" },
  "description": "Covertly send messages to friends, family, paramours & more by hiding messages in pictures of Kim Kardashian!!!!!",
  "permissions": [
    "tabs", "http://*/*", "https://*/*", "activeTab"
  ],
  "background": {
    "scripts": ["kardashiankrypt.js", "generatepng.js", "webtoolkit.base64.js", "aes.js", "aes-ctr.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
            "19": "16.png",  
            "38": "48.png" 
    }
  }
}